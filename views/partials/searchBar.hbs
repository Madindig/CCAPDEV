<div class="container mt-5">
    <div class="card text-white search-card">
        <div class="card-body search-card-body">
            <form>
                <div class="form-group">
                    <input type="text" class="form-control" id="searchQuery" placeholder="Enter your search here">
                </div>

                <div id="filter-accordion" class="row accordion-link">
                    <!-- Amenities -->
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header" id="amenities-heading">
                                <h2 class="m-0 text-center">
                                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#amenities-content" aria-expanded="true" aria-controls="amenities-content">
                                        Select Amenities <span class="oi oi-chevron-bottom"></span>
                                    </button>
                                </h2>
                            </div>
                            <div id="amenities-content" class="collapse" aria-labelledby="amenities-heading" data-parent="#filter-accordion">
                                <div class="card-body select-items">
                                    <div class="amenities-group">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="lockers" name="amenities[]" value="lockers">
                                            <label class="form-check-label" for="lockers">Lockers</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="parking" name="amenities[]" value="parking">
                                            <label class="form-check-label" for="parking">Parking</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="pool" name="amenities[]" value="pool">
                                            <label class="form-check-label" for="pool">Pool</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="sauna" name="amenities[]" value="sauna">
                                            <label class="form-check-label" for="sauna">Sauna</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="smoothieBar" name="amenities[]" value="smoothieBar">
                                            <label class="form-check-label" for="smoothieBar">Smoothie Bar</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="spaServices" name="amenities[]" value="spaServices">
                                            <label class="form-check-label" for="spaServices">Spa Services</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="shower" name="amenities[]" value="shower">
                                            <label class="form-check-label" for="shower">Shower</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="wifiAccess" name="amenities[]" value="wifiAccess">
                                            <label class="form-check-label" for="wifiAccess">Wi-Fi Access</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Location -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header" id="region-heading">
                                <h2 class="m-0 text-center">
                                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#region-content" aria-expanded="false" aria-controls="region-content">
                                        Select Locations
                                        <span class="oi oi-chevron-bottom"></span>
                                    </button>
                                </h2>
                            </div>
                            <div id="region-content" class="collapse" aria-labelledby="region-heading" data-parent="#filter-accordion">
                                <div class="card-body select-items">
                                    <div class="region-group">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="ncr-east" name="regions[]" value="ncr-east">
                                            <label class="form-check-label" for="ncr-east">NCR-East</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="ncr-north" name="regions[]" value="ncr-north">
                                            <label class="form-check-label" for="ncr-north">NCR-North</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="ncr-west" name="regions[]" value="ncr-west">
                                            <label class="form-check-label" for="ncr-west">NCR-West</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="ncr-south" name="regions[]" value="ncr-south">
                                            <label class="form-check-label" for="ncr-south">NCR-South</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="bulacan" name="regions[]" value="bulacan">
                                            <label class="form-check-label" for="bulacan">Bulacan</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="cavite" name="regions[]" value="cavite">
                                            <label class="form-check-label" for="cavite">Cavite</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="laguna" name="regions[]" value="laguna">
                                            <label class="form-check-label" for="laguna">Laguna</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="rizal" name="regions[]" value="rizal">
                                            <label class="form-check-label" for="rizal">Rizal</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            
                <button type="submit" class="btn btn-primary btn-block search-btn">Search</button>
            </form>
        </div>
    </div>
</div>