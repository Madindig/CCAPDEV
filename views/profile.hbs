{{#if isBusiness}}
    <div class="bg">
        <div class="profile-container">
            <div class="profile-card">
                <div class="profile-info">
                    <img class="profile-pic" src="/profile_pictures/{{user.profilePicture}}" alt="Profile Picture">
                    <div class="profile-text">
                        <h2>{{user.firstName}} {{user.lastName}}</h2>
                        <p>{{user.username}}</p>
                        <label for="bio"></label><textarea id="bio" name="bio" rows="2" cols="50" readonly>{{user.shortDescription}}</textarea>
                        
                        <!-- Edit & Delete Profile Buttons -->
                        <button id="editBusinessProfileButton"  data-toggle="modal" data-target="#editProfileModal">Edit Profile</button>
                        <button id="deleteBusinessProfileButton" class="delete-btn" data-toggle="modal" data-target="#deleteProfileModal">Delete Profile</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="gym-container">
            <div class = "row align-items-center">
                <div class = "col">
                    <h2>Establishments</h2>
                </div>

                {{!-- <div class = "col-auto mb-3">
                    <button id="createGymButton"  data-toggle="modal" data-target="#createGymModal">New Establishment</button>
                </div> --}}
            </div>

            {{#each gyms}}
            <a href="/establishments/{{this._id}}" class="gym-card-link">
                <div class="gym-card">
                    <img src="/establishment_pictures/{{this.image}}" alt="{{this.name}}">
                    <div class="gym-details">
                        <h3>{{this.name}}</h3>
                        <p><strong>Rating:</strong> {{this.rating}}</p>
                        <p><strong>Location:</strong> {{this.location}}</p>
                        <p><strong>Amenities:</strong> {{this.amenities}}</p>

                        <!-- Edit & Delete Gym Buttons -->
                        <button data-id="{{this._id}}" data-toggle="modal" data-target="#editGymModal-{{this._id}}">Edit</button>
                        <button class="delete-btn" data-id="{{this._id}}" data-toggle="modal" data-target="#deleteGymModal-{{this._id}}">Delete</button>
                    </div>
                </div>
            </a>

            {{!-- edit and delete gym modal --}}
            {{/each}}
        </div>
    </div>

{{else}}

<div class="bg">
    <div class="profile-container">
        <div class="profile-card">
            <div class="profile-info">
                <img class="profile-pic" src="/profile_pictures/{{user.profilePicture}}" alt="Profile Picture">
                <div class="profile-text">
                    <h2>{{user.firstName}} {{user.lastName}}</h2>
                    <p>{{user.reviewCount}} Reviews Made</p>
                    <textarea id="bio" name="bio" rows="2" cols="50" readonly>{{user.shortDescription}}</textarea>
                    
                    <!-- Edit & Delete Profile Buttons -->
                    <button id="editPeopleProfileButton" data-toggle="modal" data-target="#editProfileModal">Edit Profile</button>
                    <button id="deletePeopleProfileButton" class="delete-btn" data-toggle="modal" data-target="#deleteProfileModal">Delete Profile</button>
                </div>
            </div>
        </div>
    </div>

    <div class="review-container">
        <h2>Reviews</h2>
        {{#if reviews.length}}
            {{#each reviews}}
            <div class="gym-card">
                <img src="/establishment_pictures/{{this.image}}" alt="{{this.name}}">
                <div class="gym-details">
                <h3>{{this.name}}</h3>
                <p><strong>Rating:</strong> {{this.rating}}</p>
                <p><strong>Review:</strong> {{this.reviewText}} {{#if this.edited}}<em class="text-muted">(edited)</em>{{/if}}</p>
                <p>Like {{this.likes.length}} | Dislike {{this.dislikes.length}}</p>
                <button class="editReviewButton"
                        data-toggle="modal"
                        data-target="#editReviewModal-{{this._id}}"
                        data-review-id="{{this._id}}"
                        data-review-text="{{this.reviewText}}"
                        data-review-rating="{{this.rating}}">Edit
                </button>
                <button id="deleteReviewButton" class="delete-btn" data-toggle="modal" data-target="#deleteReviewModal-{{this._id}}">Delete</button>
                </div>
            </div>
            {{/each}}
        {{else}}
            <p>No reviews yet.</p>
        {{/if}}

        <h2>Comments</h2>
        {{#if comments.length}}
            {{#each comments}}
            <div class="gym-card">
                <div class="gym-details">
                <p><strong>Your Comment:</strong> {{this.commentText}}</p>
                <p><strong>Review Snippet:</strong> {{#if this.reviewId}}{{this.reviewId.reviewText}}{{else}}(Review not found){{/if}}</p>
                <p><strong>Rating:</strong> {{this.reviewId.rating}}</p>
                <p><strong>Establishment:</strong> {{this.reviewId.establishmentId.name}}</p>
                <p class="text-muted">Posted: {{this.createdAt}}</p>
                <button class="delete-btn" onclick="deleteComment('{{this._id}}')">Delete</button>
                </div>
            </div>
            {{/each}}
        {{else}}
            <p>You haven't posted any comments yet.</p>
        {{/if}}
    </div>

    <div class="modal fade" id="editReviewModal-{{this._id}}" tabindex="-1" aria-labelledby="editReviewModalLabel-{{this._id}}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="reviewModalLabel-{{this._id}}">Create a Review</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <form id="editReviewForm-{{this._id}}" data-original-review="{{this.reviewText}}">
                    <div class="modal-body" id="reviewModalBody">
                        <input type="hidden" id="establishmentId-{{this._id}}" value="{{establishment._id}}">
                        <!-- Rating Dropdown -->
                        <label for="reviewRating-{{this._id}}" class="form-label">Rating:</label>
                        <select class="form-select" id="editReviewRating-{{this._id}}" name="editReviewRating">
                            <option value="1" {{#if (equal this.rating 1)}}selected{{/if}}>1 - Worst</option>
                            <option value="2" {{#if (equal this.rating 2)}}selected{{/if}}>2</option>
                            <option value="3" {{#if (equal this.rating 3)}}selected{{/if}}>3</option>
                            <option value="4" {{#if (equal this.rating 4)}}selected{{/if}}>4</option>
                            <option value="5" {{#if (equal this.rating 5)}}selected{{/if}}>5 - Best</option>
                        </select>

                        <textarea class="commentbox form-control mt-3" id="editReviewbox-{{this._id}}" name="editReviewbox" rows="4" placeholder="Leave a review">{{this.reviewText}}</textarea>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteReviewModal-{{this._id}}" tabindex="-1" aria-labelledby="deleteLabel-{{this._id}}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteLabel-{{this._id}}">Delete Review</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="deleteForm-{{this._id}}">
                        <label for="reviewRating-{{this._id}}" class="form-label">Rating:</label>
                        <select class="form-select" id="deleteReviewRating-{{this._id}}" name="reviewRating" disabled aria-disabled="true">
                            <option value="1" {{#if (equal this.rating 1)}}selected{{/if}}>1 - Worst</option>
                            <option value="2" {{#if (equal this.rating 2)}}selected{{/if}}>2</option>
                            <option value="3" {{#if (equal this.rating 3)}}selected{{/if}}>3</option>
                            <option value="4" {{#if (equal this.rating 4)}}selected{{/if}}>4</option>
                            <option value="5" {{#if (equal this.rating 5)}}selected{{/if}}>5 - Best</option>
                        </select>

                        <textarea class="commentbox form-control mt-3" id="deleteReviewbox-{{this._id}}" name="deleteReviewbox" rows="4" placeholder="Leave a review" readonly aria-readonly="true">{{this.reviewText}}</textarea>
                        <button class="btn btn-primary delete-review-btn"
                                id="deleteButton-{{this._id}}"
                                data-review-id="{{this._id}}">Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{/if}}

<div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProfileModal">Edit Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body" id="editProfileModalBody">
                <form id="editProfileForm" data-user-id="{{user._id}}" data-original-profile-picture="{{user.profilePicture}}" data-original-description="{{user.shortDescription}}">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editFirstName">First Name:</label>
                                <input type="text" class="form-control" id="editFirstName" placeholder="{{user.firstName}}" readonly aria-readonly="true">
                            </div>
                            <div class="form-group">
                                <label for="editLastName">Last Name:</label>
                                <input type="text" class="form-control" id="editLastName" placeholder="{{user.lastName}}" readonly aria-readonly="true">
                            </div>

                            <div class="form-group">
                                <label for="editPassword">Password:</label>
                                <input type="password" class="form-control" id="editPassword">
                            </div>

                            <div class="form-group">
                                <label for="editConfirmPassword">Confirm Password:</label>
                                <input type="password" class="form-control" id="editConfirmPassword">
                            </div>

                            <div class="form-group mt-4">
                                <label for="accountTypeEdit">Account Type:</label>
                                <select id="accountTypeEdit" name="accountTypeEdit" class="form-control" disabled aria-disabled="true">
                                    <option value="people" {{#if (equal user.role "people")}}selected{{/if}}>Regular User</option>
                                    <option value="business" {{#if (equal user.role "business")}}selected{{/if}}>Business Owner</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">

                            <label for="profilePictureFile">Profile Picture:</label>
                            <div class="image-upload-container">
                                <img id="editProfileImagePreview" src="/profile_pictures/{{user.profilePicture}}" alt="Profile Preview" class="profile-image">
                            </div>

                            <div class="form-group">
                                <input type="file" class="form-control-file mt-2" id="editProfilePictureFile" name="profilePicture" accept=".jpg">
                            </div>

                            <div class="form-group">
                                <button class="btn btn-secondary" id="clearProfilePicture">Clear Profile Picture</button>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="editProfileDescription">Short Description:</label>
                                <textarea class="form-control short-desc" id="editProfileDescription" rows="2">{{user.shortDescription}}</textarea>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-block mt-3" id="editButton">Accept Changes</button>
                        </div>
                    </div>
                </form>
                </div>
            </div>
        </div>
</div>
<div class="modal fade" id="deleteProfileModal" tabindex="-1" aria-labelledby="deleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteLabel">Verify Profile Deletion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="deleteProfileForm" data-user-id="{{user._id}}">
                    <div class="form-group">
                        <label for="confirmDeleteUsername">Username:</label>
                        <input type="text" class="form-control" id="confirmDeleteUsername" placeholder="Enter Username" required>
                    </div>
                    <div class="form-group mb-5">
                        <label for="confirmDeletePassword">Password:</label>
                        <input type="password" class="form-control" id="confirmDeletePassword" placeholder="Enter Password" required>
                    </div>

                    <div>
                        <label>
                            <input type = "checkbox" id="deleteConfirmation"> I fully understand that the following action cannot be undone.
                        </label>
                    </div>

                    <button type="submit" class="btn btn-block btn-primary login-btn mt-3" id="deleteProfileButton">Confirm Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/scripts/deleteReview.js"></script>
<script src="/scripts/editReview.js"></script>
<script src="/scripts/editProfile.js"></script>
<script src="/scripts/deleteProfile.js"></script>
<script src="/scripts/auth.js"></script>
