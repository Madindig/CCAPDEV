                                <textarea class="form-control short-desc" id="editProfileDescription" rows="2">{{user.shortDescription}}</textarea>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-block mt-3" id="editButton">Accept Changes</button>
                        </div>
                    </div>
                </form>
                </div>
            </div>
        </div>
</div>

<div class="modal fade" id="deleteProfileModal" tabindex="-1" aria-labelledby="deleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteLabel">Delete {{user.username}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
