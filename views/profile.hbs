{{#if isBusiness}}
    <div class="bg">
        <div class="profile-container">
            <div class="profile-card">
                <div class="profile-info">
                    <img class="profile-pic" src="/profile_pictures/{{user.profilePicture}}" alt="Profile Picture">
                    <div class="profile-text">
                        <h2>{{user.username}}</h2>
                        <label for="bio"></label><textarea id="bio" name="bio" rows="2" cols="50" readonly>{{user.shortDescription}}</textarea>

                        <!-- Edit & Delete Profile Buttons -->
                        {{#if isCurrentUser}}
                        <button id="editBusinessProfileButton"  data-toggle="modal" data-target="#editProfileModal">Edit Profile</button>
                        <button id="deleteBusinessProfileButton" class="delete-btn" data-toggle="modal" data-target="#deleteProfileModal">Delete Profile</button>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>

        <div class="gym-container">
            <div class="row align-items-center">
                <div class="col">
                    <h2>Establishments</h2>
                </div>

                <div class="col-auto mb-3">
                    {{#if isCurrentUser}}<button id="createGymButton" data-toggle="modal" data-target="#createGymModal">New Establishment</button>{{/if}}
                </div>
            </div>

            {{#each gyms}}
                <div class="gym-card-link" data-href="/establishments/{{this._id}}">
                    <div class="gym-card">

                        <img src="/establishment_pictures/{{this.image}}" alt="{{this.name}}">
                        <div class="gym-details">
                            <h3>{{this.name}}</h3>
                            <p><strong>Rating:</strong> {{#if (equal this.rating 0)}}Unrated{{else}}{{this.rating}}{{/if}}</p>
                            <p><strong>Location:</strong> {{this.location}}</p>
                            <p><strong>Amenities:</strong> {{#each this.amenities}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</p>
                            {{#if this.isUser}}
                            <button class="edit-btn" data-id="{{this._id}}" data-toggle="modal" data-target="#editGymModal-{{this._id}}">Edit</button>
                            <button class="delete-btn" data-id="{{this._id}}" data-toggle="modal" data-target="#deleteGymModal-{{this._id}}">Delete</button>
                            {{/if}}
                        </div>
                    </div>
                </div>

                {{!-- Edit and delete gym modal --}}
                <div class="modal fade" id="editGymModal-{{this._id}}" tabindex="-1" aria-labelledby="editGymModal-{{this._id}}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editGymModal-{{this._id}}">{{this.name}}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                            <div class="modal-body" id="editGymModal-{{this._id}}">
                                <form id="editGymForm-{{this._id}}">
                                    <input type="hidden" id="gymId-{{this._id}}" name="gymId" value="{{this._id}}">

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="eGymName-{{this._id}}">Gym Name:</label>
                                                <input type="text" class="form-control" id="eGymName-{{this._id}}" placeholder="Enter Gym Name" value= "{{this.name}}" required aria-required="true">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <label for="eProfilePictureFile">Thumbnail:</label>
                                            <div class="image-upload-container">
                                                <img id="profileImagePreview-{{this._id}}" src="/establishment_pictures/{{this.image}}" alt="Profile Preview" class="profile-image">
                                            </div>

                                            <div class="form-group">
                                                <input type="file" class="form-control-file mt-2" id="eProfilePictureFile-{{this._id}}" name="eProfilePicture" accept=".jpg">
                                                <button type="button" class="btn btn-secondary mt-2" id="clearImageBtn-{{this._id}}">Clear Thumbnail</button>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="gymProfileDescription">Address:</label>
                                                <textarea class="form-control short-desc" id="eGymAddress-{{this._id}}" rows="2" placeholder="Enter an Address" name="eGymAddress">{{this.address}}</textarea>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="gymProfileDescription">Contact Number:</label>
                                                <textarea class="form-control short-desc" id="eGymContact-{{this._id}}" rows="2" placeholder="Enter a Contact Number" name="eGymContactNumber">{{this.contactNumber}}</textarea>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="gymDescription-{{this._id}}">Short Description:</label>
                                                <textarea class="form-control short-desc" id="eGymDescription-{{this._id}}" rows="2">{{this.shortDescription}}</textarea>
                                            </div>
                                        </div>
                                    </div>

                                    <div id="filter-accordion" class="row accordion-link">
                                        <!-- Amenities -->
                                        <div class="col-md-6">
                                            <div class="card mb-3">
                                                <div class="card-header" id="amenities-heading">
                                                    <h2 class="m-0 text-center">
                                                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#amenities-content" aria-expanded="true" aria-controls="amenities-content">
                                                            Select Amenities <span class="oi oi-chevron-bottom"></span>
                                                        </button>
                                                    </h2>
                                                </div>
                                                <div id="amenities-content" class="collapse" aria-labelledby="amenities-heading" data-parent="#filter-accordion">
                                                    <div class="card-body select-items">
                                                        <div class="amenities-group">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="shower" name="eAmenities[]" value="Showers" {{#if (includes this.amenities "Showers")}}checked{{/if}}>
                                                                <label class="form-check-label" for="shower">Shower</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="parking" name="eAmenities[]" value="Parking" {{#if (includes this.amenities "Parking")}}checked{{/if}}>
                                                                <label class="form-check-label" for="parking">Parking</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="pool" name="eAmenities[]" value="Swimming Pool" {{#if (includes this.amenities "Swimming Pool")}}checked{{/if}}>
                                                                <label class="form-check-label" for="pool">Swimming Pool</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="lockers" name="eAmenities[]" value="Lockers" {{#if (includes this.amenities "Lockers")}}checked{{/if}}>
                                                                <label class="form-check-label" for="lockers">Lockers</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="sauna" name="eAmenities[]" value="Sauna" {{#if (includes this.amenities "Sauna")}}checked{{/if}}>
                                                                <label class="form-check-label" for="sauna">Sauna</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="spaServices" name="eAmenities[]" value="Spa Services" {{#if (includes this.amenities "Spa Services")}}checked{{/if}}>
                                                                <label class="form-check-label" for="spaServices">Spa Services</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="wifiAccess" name="eAmenities[]" value="Free WiFi Access" {{#if (includes this.amenities "Free WiFi Access")}}checked{{/if}}>
                                                                <label class="form-check-label" for="wifiAccess">Wi-Fi Access</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="nutritionBar" name="eAmenities[]" value="Nutrition Bar" {{#if (includes this.amenities "Nutrition Bar")}}checked{{/if}}>
                                                                <label class="form-check-label" for="nutritionBar">Nutrition Bar</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="basketballCourt" name="eAmenities[]" value="Basketball Court" {{#if (includes this.amenities "Basketball Court")}}checked{{/if}}>
                                                                <label class="form-check-label" for="basketballCourt">Basketball Court</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="tvScreens" name="eAmenities[]" value="TV Screens on Equipment" {{#if (includes this.amenities "TV Screens on Equipment")}}checked{{/if}}>
                                                                <label class="form-check-label" for="tvScreens">TV Screens on Equipment</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Location -->
                                        <div class="col-md-6">
                                            <div class="card">
                                                <div class="card-header" id="region-heading">
                                                    <h2 class="m-0 text-center">
                                                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#region-content" aria-expanded="false" aria-controls="region-content">
                                                            Select Location
                                                            <span class="oi oi-chevron-bottom"></span>
                                                        </button>
                                                    </h2>
                                                </div>
                                                <div id="region-content" class="collapse" aria-labelledby="region-heading" data-parent="#filter-accordion">
                                                    <div class="card-body select-items">
                                                        <div class="region-group">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio" id="ncr-west" name="eRegions" value="NCR West" {{#if (equal this.location "NCR West")}}checked{{/if}}>
                                                                <label class="form-check-label" for="ncr-west">NCR West</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio" id="ncr-east" name="eRegions" value="NCR East" {{#if (equal this.location "NCR East")}}checked{{/if}}>
                                                                <label class="form-check-label" for="ncr-east">NCR East</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio" id="ncr-north" name="eRegions" value="NCR North" {{#if (equal this.location "NCR North")}}checked{{/if}}>
                                                                <label class="form-check-label" for="ncr-north">NCR North</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio" id="ncr-south" name="eRegions" value="NCR South" {{#if (equal this.location "NCR South")}}checked{{/if}}>
                                                                <label class="form-check-label" for="ncr-south">NCR South</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio" id="bulacan" name="eRegions" value="Bulacan" {{#if (equal this.location "Bulacan")}}checked{{/if}}>
                                                                <label class="form-check-label" for="bulacan">Bulacan</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio" id="cavite" name="eRegions" value="Cavite" {{#if (equal this.location "Cavite")}}checked{{/if}}>
                                                                <label class="form-check-label" for="cavite">Cavite</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio" id="laguna" name="eRegions" value="Laguna" {{#if (equal this.location "Laguna")}}checked{{/if}}>
                                                                <label class="form-check-label" for="laguna">Laguna</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio" id="rizal" name="eRegions" value="Rizal" {{#if (equal this.location "Rizal")}}checked{{/if}}>
                                                                <label class="form-check-label" for="rizal">Rizal</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <label class="privacy-policy">
                                                By clicking Accept Changes, you agree on our <a href="" class="privacy-link">Privacy Policy</a>
                                            </label>
                                        </div>

                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-primary btn-block mt-3" id="editEstablishmentButton">Accept Changes</button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="deleteGymModal-{{this._id}}" tabindex="-1" aria-labelledby="deleteGymLabel-{{this._id}}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteGymLabel-{{this._id}}">Delete {{this.name}}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form id="deleteGymForm-{{this._id}}">
                                    <div class="form-group">
                                        <label for="confirmDeleteUsername-{{this._id}}">Username:</label>
                                        <input type="text" class="form-control" id="confirmDeleteUsername-{{this._id}}" placeholder="Enter Username" required>
                                    </div>

                                    <div class="form-group mb-5">
                                        <label for="confirmDeletePassword-{{this._id}}">Password:</label>
                                        <input type="password" class="form-control" id="confirmDeletePassword-{{this._id}}" placeholder="Enter Password" required>
                                    </div>

                                    <div>
                                        <label>
                                            <input type="checkbox" id="confirmDeleteCheckbox-{{this._id}}" required> I fully understand that the following action cannot be undone.
                                        </label>
                                    </div>

                                    <button type="submit" class="btn btn-block btn-primary login-btn mt-3" id="deleteButton-{{this._id}}">Confirm Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>


{{else}}

<div class="bg">
    <div class="profile-container">
        <div class="profile-card">
            <div class="profile-info">
                <img class="profile-pic" src="/profile_pictures/{{user.profilePicture}}" alt="Profile Picture">
                <div class="profile-text">
                    <h2>{{user.username}}</h2>
                    <p>{{user.reviewCount}} Reviews Made</p>
                    <textarea id="bio" name="bio" rows="2" cols="50" readonly>{{user.shortDescription}}</textarea>
                    
                    <!-- Edit & Delete Profile Buttons -->
                    {{#if isCurrentUser}}
                    <button id="editPeopleProfileButton" data-toggle="modal" data-target="#editProfileModal">Edit Profile</button>
                    <button id="deletePeopleProfileButton" class="delete-btn" data-toggle="modal" data-target="#deleteProfileModal">Delete Profile</button>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>

    <div class="review-container">
	<h2>Reviews</h2>
	{{#if reviews.length}}
	{{#each reviews}}
	<div class="gym-card">
		<img src="/establishment_pictures/{{this.image}}" alt="{{this.name}}">
		<div class="gym-details">
			<h3>{{this.name}}</h3>
			<p><strong>Rating:</strong> <span class="rating-stars">{{this.stars}}</span></p>
			<p><strong>Review:</strong> {{this.reviewText}} {{#if this.edited}}<em class="text-muted">(edited)</em>{{/if}}</p>
			<p>Like {{this.likes.length}} | Dislike {{this.dislikes.length}}</p>

            {{#if this.isUser}}
			<button class="editReviewButton"
                    data-toggle="modal"
                    data-target="#editReviewModal-{{this._id}}"
                    data-review-id="{{this._id}}"
                    data-review-text="{{this.reviewText}}"
                    data-review-rating="{{this.rating}}">Edit
            </button>
            <button id="deleteReviewButton" class="delete-btn" data-toggle="modal" data-target="#deleteReviewModal-{{this._id}}">Delete</button>
            {{/if}}
		</div>
	</div>

    <div class="modal fade" id="editReviewModal-{{this._id}}" tabindex="-1" aria-labelledby="editReviewModalLabel-{{this._id}}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="reviewModalLabel-{{this._id}}">Create a Review</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <form id="editReviewForm-{{this._id}}" data-original-review="{{this.reviewText}}">
                    <div class="modal-body" id="reviewModalBody">
                        <input type="hidden" id="establishmentId-{{this._id}}" value="{{establishment._id}}">
                        <!-- Rating Dropdown -->
                        <label for="reviewRating-{{this._id}}" class="form-label">Rating:</label>
                        <select class="form-select" id="editReviewRating-{{this._id}}" name="editReviewRating">
                            <option value="1" {{#if (equal this.rating 1)}}selected{{/if}}>1 - Worst</option>
                            <option value="2" {{#if (equal this.rating 2)}}selected{{/if}}>2</option>
                            <option value="3" {{#if (equal this.rating 3)}}selected{{/if}}>3</option>
                            <option value="4" {{#if (equal this.rating 4)}}selected{{/if}}>4</option>
                            <option value="5" {{#if (equal this.rating 5)}}selected{{/if}}>5 - Best</option>
                        </select>

                        <textarea class="commentbox form-control mt-3" id="editReviewbox-{{this._id}}" name="editReviewbox" rows="4" placeholder="Leave a review">{{this.reviewText}}</textarea>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteReviewModal-{{this._id}}" tabindex="-1" aria-labelledby="deleteLabel-{{this._id}}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteLabel-{{this._id}}">Delete Review</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="deleteForm-{{this._id}}">
                        <label for="reviewRating-{{this._id}}" class="form-label">Rating:</label>
                        <select class="form-select" id="deleteReviewRating-{{this._id}}" name="reviewRating" disabled aria-disabled="true">
                            <option value="1" {{#if (equal this.rating 1)}}selected{{/if}}>1 - Worst</option>
                            <option value="2" {{#if (equal this.rating 2)}}selected{{/if}}>2</option>
                            <option value="3" {{#if (equal this.rating 3)}}selected{{/if}}>3</option>
                            <option value="4" {{#if (equal this.rating 4)}}selected{{/if}}>4</option>
                            <option value="5" {{#if (equal this.rating 5)}}selected{{/if}}>5 - Best</option>
                        </select>

                        <textarea class="commentbox form-control mt-3" id="deleteReviewbox-{{this._id}}" name="deleteReviewbox" rows="4" placeholder="Leave a review" readonly aria-readonly="true">{{this.reviewText}}</textarea>
                        <button class="btn btn-primary delete-review-btn"
                                id="deleteButton-{{this._id}}"
                                data-review-id="{{this._id}}">Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {{/each}}
	{{else}}
	    <p>No reviews yet.</p>
	{{/if}}

    <h2>Comments</h2>
    {{#if comments.length}}
        {{#each comments}}
        <div class="gym-card">
            <div class="gym-details">
            <p><strong>Your Comment:</strong> {{this.commentText}}</p>
            <p><strong>Review Snippet:</strong> {{#if this.reviewId}}{{this.reviewId.reviewText}}{{else}}(Review not found){{/if}}</p>
            <p><strong>Rating:</strong> {{this.reviewId.rating}}</p>
            <p><strong>Establishment:</strong> {{this.reviewId.establishmentId.name}}</p>
            <p class="text-muted">Posted: {{this.createdAt}}</p>
            {{#if this.isUser}}<button class="delete-btn" onclick="deleteComment('{{this._id}}')">Delete</button>{{/if}}
            </div>
        </div>
        {{/each}}
    {{else}}
        <p>You haven't posted any comments yet.</p>
    {{/if}}
    </div>

</div>

{{/if}}

